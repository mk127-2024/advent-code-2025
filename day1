#include <stdio.h>

int main()
{

int spins;
char direction;
int cur_dir = 50;
int zeros = 0;

// given puzzle input
FILE *ptr = fopen("input.txt", "r");

while (fscanf(ptr, " %c%d", &direction, &spins) == 2)
{

	if (direction == 'R')
	{
		for (int i = 0; i < spins; i++)
		{
		    cur_dir++;
		    if (cur_dir == 100) cur_dir = 0;
		    if (cur_dir == 0) zeros++;
		}

	}
	else if (direction == 'L')
	{
		for (int i = 0; i < spins; i++)
		{
		    cur_dir--;
		    if (cur_dir == -1) cur_dir = 99;
		    if (cur_dir == 0) zeros++;
		}
		
	}
	
}

printf("%d %d", zeros, cur_dir);

fclose(ptr);
}
